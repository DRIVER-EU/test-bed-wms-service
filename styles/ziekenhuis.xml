<Style name="ziekenhuis-label" filter-mode="first">
  <Rule>
    <MaxScaleDenominator>12500</MaxScaleDenominator>
    <TextSymbolizer fontset-name="fontset-0" fill="#444444" halo-fill="rgba(255, 255, 255, 0.7)" halo-radius="2.5" size="12" dy="18">
      <![CDATA[[Name]]]>
    </TextSymbolizer>
  </Rule>
</Style>
<Style name="ziekenhuis-icon" filter-mode="first">
    <Rule>
      <Filter>([state] = 2)</Filter>
      <MarkersSymbolizer fill="#ff0000" width="48" file="../icons/ziekenhuis.svg" />
    </Rule>
    <Rule>
      <Filter>([state] = 1)</Filter>
      <MarkersSymbolizer fill="#ffc859" width="48" file="../icons/ziekenhuis.svg" />
    </Rule>
    <Rule>
      <MaxScaleDenominator>100000</MaxScaleDenominator>
      <MarkersSymbolizer width="24" file="../icons/ziekenhuis.svg" />
    </Rule>
    <Rule>
      <MaxScaleDenominator>750000</MaxScaleDenominator>
      <MinScaleDenominator>100000</MinScaleDenominator>
      <MarkersSymbolizer width="18" file="../icons/ziekenhuis.svg" />
    </Rule>
    <Rule>
      <MinScaleDenominator>750000</MinScaleDenominator>
      <MarkersSymbolizer width="14" file="../icons/ziekenhuis.svg" />
    </Rule>
</Style>
<Layer name="ziekenhuis" srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
  <StyleName>ziekenhuis-icon</StyleName>
  <StyleName>ziekenhuis-label</StyleName>
  <Datasource>
    <Parameter name="file">
      <![CDATA[{{FILENAME}}]]>
    </Parameter>
    <Parameter name="layer">
      <![CDATA[OGRGeoJSON]]>
    </Parameter>
    <Parameter name="id">
      <![CDATA[ziekenhuis]]>
    </Parameter>
    <Parameter name="project">
      <![CDATA[{{STYLENAME}}]]>
    </Parameter>
    <Parameter name="srs">
      <![CDATA[+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over]]>
    </Parameter>
    <Parameter name="type">
      <![CDATA[ogr]]>
    </Parameter>
  </Datasource>
</Layer>